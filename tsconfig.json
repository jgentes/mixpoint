{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "react": ["./node_modules/@types/react"],
      "~/*": ["./app/*"]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    /* skipLibCheck required due to highlight.io sdk's usage of 'opentelemetry-sdk-workers'
       which works around node syntax in its dependencies by dynamically replacing
       the imported javascript bundle, but does not replace the '@types/node' dependency */
    "skipLibCheck": true,
  },
  "include": ["**/*.ts", "**/*.tsx", "remix.env.d.ts", "./global.d.ts"]
}
